<h3>Edit User!</h3>

<%= form_for @user do |f| %>
	

  <div>
      <%= f.label :profile_pic, 'Change Profile Picture' %>
      <%= f.file_field :profile_pic %>
  </div>
  
<br>

  <div>
	   <%= f.label :first_name %>
     <%= f.text_field :first_name, value: @user.first_name %>
  </div>

  <div>
     <%= f.label :last_name %>
     <%= f.text_field :last_name, value: @user.last_name %>
  </div>

  <div>
     <%= f.label :category %>
     <%= f.text_field :category, value: @user.category %>
  </div>

  <div>
     <%= f.label :bio %>
     <%= f.text_field :bio, value: @user.bio %>
  </div>

  <div>
     <%= f.label :contact_info %>
     <%= f.text_field :contact_info, value: @user.contact_info %>
  </div>

  <div>
	   <%= f.label :email %>
     <%= f.text_field :email, value: @user.email %>
  </div>

   <div>
	   <%= f.label :password %>
     <%= f.password_field :password %>
   </div>


   <div>
     <%= f.label :password_confirmation %>
     <%= f.password_field :password_confirmation %>
   </div>
  		

  </div>
	   <%= f.submit "Save Changes" %>
  </div>

<% end %>
