<div class="row">
	<h1 class="col-xs-6 col-xs-offset-4"><%= @post.title %></h1>
	<h3 class="col-xs-6 col-xs-offset-4"> By: <%= link_to(@post.user.first_name, user_path(@post.user_id)) %> </h3>
</div>

<br>


<!-- Post Image -->
<div class="row col-xs-3 col-xs-offset-4">

	<%= image_tag @post.image.url(:post_pic) %>

</div>

<div class="row">
	<h5 class="col-xs-3 col-xs-offset-4"><%= @post.date_published %></h5>


		<div class="col-xs-3 col-xs-offset-4 text-left">
			Link:  <%= link_to(@post.link, @post.link) %>
		</div>

	<div class="col-xs-3 col-xs-offset-4 text-left post-description"> <%= @post.description %> </div>
<br>

</div>

<div class="col-xs-3 col-xs-offset-4 post-options">
	<% if current_user == @post.user %>

		<%= link_to "Edit", edit_post_path(@post) %>

		<%= link_to "Destroy", post_path(@post), method: :delete, data: { confirm: "This is probably pretty Maginificent, are you sure you want to delete it?" } %> 

		<%= link_to "Home", root_path %>

		
	<% end %>

</div>

<div class='test-random'>
	<%= link_to image_tag(@random_post.image.url(:small)), post_path(@random_post) %>
	<p id='random-post-title'><%= link_to @random_post.title, post_path(@random_post) %></p>
</div>
