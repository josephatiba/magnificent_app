

<div class="container main">
  	<div class="row">
  		<% if current_user %>

			<div>Welcome, <%= current_user.first_name %>!</div>
		<% end %>
 	<div>

	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg %>
	<% end %>


	<%= logged_in? ? '' : link_to("Add New Magnificence", new_post_path) %>

 </div>

<!-- Big "Magnificent" at the top of the page-->
	<div class="feed header text-center">The Magnificent</div>
	<!-- Current User's name Display -->


<div class="container">
	<div id="posts"> 
		<!-- Gilt API posts -->
			<div class="box panel panel-default">	
				<%= image_tag(@gilt.pull_pic) %>
				<p class="main-page-post-title"><%= @gilt.pull_title %></p>	
			</div>
		<!-- user posts -->
		<% @posts.each do |post| %>
			<div class="box panel panel-default">
				<%= link_to image_tag(post.image.url), post %>
				<li><%= link_to post.title, post, class: "main-page-post-title" %></li>
	    	</div>	
		<% end %>	  
			
	</div>	
</div>
  	


