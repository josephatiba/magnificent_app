

<div class="container">
    <div class="row">
      <% if current_user %>
        <div>Welcome, <%= current_user.first_name %>!</div>
      <% end %>
  
    

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg %>
    <% end %>

    <%= logged_in? ? '' : link_to("Add New Magnificence", new_post_path) %>

  </div>
</div>

<!-- Big "Magnificent" at the top of the page-->
  <div class="feed header text-center center-block">
    <h1>The Magnificent</h1>
		  

		<div id="filters" class="button-group">
		  <button class="filter-button button" data-filter="*"><h3>Show All</h3></button>
		  <button class="filter-button button" data-filter=".women"><h3>Women</h3></button>
		  <button class="filter-button button" data-filter=".men"><h3>Men</h3></button>
		  <button class="filter-button button" data-filter=".kids"><h3>Baby & Kids</h3></button>
		  <button class="filter-button button" data-filter=".home"><h3>Home</h3></button>
		</div>

 </div>
  <!-- Current User's name Display -->
<br />

      
<div id="container"> 
  

  <!-- user posts -->
  <% @posts.each do |post| %>
    <div class="box panel panel-default <%= post.category %> isotope-item center-block">
      <%= link_to image_tag(post.image.url(:tile), class: "post-index-tile"), post.link, :target => "_blank", class: "post-index-link" %>
      <p><%= link_to post.title, post.link, :target => "_blank", class: "main-page-post-title" %></p>
    </div>  
  <% end %>   
    

  <!-- Gilt API posts -->

  
</div>  
      
