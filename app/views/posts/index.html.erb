

<div class="container main">
  	<div class="row">
  		<% if current_user %>

		<div>Welcome, <%= current_user.first_name %>!</div>

	<% end %>


 <div>
	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg %>
	<% end %>


	<%= logged_in? ? '' : link_to("Add New Magnificence", new_post_path) %>
 </div>
<!-- Big "Magnificent" at the top of the page-->
		<div class="feed header text-center">The Magnificent</div>

   				<!-- Current User's name Display -->


<div id="container" class="feed col-xs-12 col-xs-offset-2"> 
	<div class="row">	
	  	
		<% @posts.each do |post| %>
			<div class="item">
			
			<%= link_to image_tag(post.image.url, class: "img-responsive"), post %>
			<p><%= link_to post.title, post, class: "main-page-post-title" %></p>
			
			
			</div>
		<% end %>
		</div>
		
		<div>
			<%= @gilt.pull_title %>
			<%= image_tag(@gilt.pull_pic) %>
		</div>
  	</div>
  </div>
</div>

