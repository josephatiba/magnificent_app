<h1> The Magnificent </h1>
<h3><% if current_user %></h3>
	<div><%= current_user.first_name %></div>
<% end %>

<% flash.each do |name, msg| %>
	<%= content_tag :div, msg %>
<% end %>



<%= logged_in? ? '' : link_to("Add New Magnificence", new_post_path) %>

<% @posts.each do |post| %>

	<h2> <%= link_to post.title, post %> </h2>

<% end %>
