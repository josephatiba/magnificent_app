
	<%= form_for @post do |f| -%>


		<div>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>


		<div>
			<%= f.label :image %>
			<%= f.file_field :image %>
		</div>


		<div>
			<%= f.label :link %>
			<%= f.text_field :link %>
		</div>

		<div>
			<%= f.label :description %>
			<%= f.text_field :description %>
		</div>

		<div>
			<%= f.submit 'Share' %>
		</div>


<% end %>