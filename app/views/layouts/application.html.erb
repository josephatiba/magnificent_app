<!DOCTYPE html>
<html>
<head>
  <title>MagnificentApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>

<!-- NAV BAR -->
<nav class="navbar navbar-default navbar-fixed-top">
 <%= link_to "Magnificent", root_path, class: "navbar-brand" %>
  <div class="container">
    <div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path %>
        </li>
        <li><%= logged_in? ? '' : link_to("Account", user_path(current_user)) %></li>
        <li><%= logged_in? ? link_to("Sign Up", new_user_path) : link_to("+", new_post_path, class: "add-new") %></li>
        <li class="credentials"><%= logged_in? ? link_to("Log In", login_path) : link_to("Log Out", logout_path, method: :delete) %></li>
      </ul>
  </div>
</nav>



<% flash.each do |name, msg| %>
	<%= content_tag :div, msg %>
<% end %>

<div class="container"> 
  <%= yield %>
</div>

</body>
</html>
