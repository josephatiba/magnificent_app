  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>

<!-- NAV BAR -->
<nav class="navbar navbar-default navbar-fixed-top">
 <a class="navbar-brand" href="#"> M (Replace w/ an image)</a>
  <div class="container">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class=""><%= link_to "Home", root_path %>
        </li>
        <li><a href="#"></a></li>
        <li><a href="#"></a></li>
        
        <li class="credentials"><%= logged_in? ? '' : link_to("Account", user_path(current_user)) %></li>
        <li class="credentials add-new"><%= logged_in? ? link_to("Sign Up", new_user_path) : link_to("+", new_post_path) %></li>
        <li class="credentials"><%= logged_in? ? link_to("Log In", login_path) : link_to("Log Out", logout_path, method: :delete) %></li>
